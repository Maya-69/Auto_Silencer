<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Silencer.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="45">

            <Label
                Text="☘️ Welcome to Silencer!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1"
                HorizontalOptions="Center"    
                Padding="0,30,0,0" 
            />

            <Button
                x:Name="SilentButton"
                Text="Silence Device"
                SemanticProperties.Hint="Silences the device volume"
                Clicked="OnSilentButtonClicked"
                HorizontalOptions="Center"
                WidthRequest="200"
                HeightRequest="60"
            /> 

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
