<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Silencer.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="45">

            <Label
                Text="☘️ Welcome to Silencer!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1"
                HorizontalOptions="Center"    
                Padding="0,30,0,0" 
            />

            <Button
                x:Name="SilentButton"
                Text="Silence Device"
                SemanticProperties.Hint="Silences the device volume"
                Clicked="OnSilentButtonClicked"
                HorizontalOptions="Center"
                WidthRequest="200"
                HeightRequest="60"
            /> 

            <Button Text="Create Zone Here" 
                Clicked="OnCreateZoneClicked"
                BackgroundColor="#4CAF50"
                TextColor="White"/>

            <Button Text="Show All Zones" 
                Clicked="OnShowZonesClicked"
                BackgroundColor="#2196F3"
                TextColor="White"/>

            <Button Text="Test Location" 
                Clicked="OnTestLocationClicked"
                BackgroundColor="#FF9800"
                TextColor="White"/>

            <Button Text="Master Switch ON/OFF" 
                Clicked="OnMasterSwitchClicked"
                BackgroundColor="#f44336"
                TextColor="White"/>

            <Button Text="Check Status" 
                Clicked="OnCheckStatusClicked"
                BackgroundColor="#9C27B0"
                TextColor="White"/>
            
            <Button Text="Delete Zone" 
                Clicked="OnDeleteZoneClicked"
                BackgroundColor="#FF5722"
                TextColor="White"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
